#! /usr/bin/env bash

export SERVICE_NAME=item-service
export NATS_URL=nats://localhost:4222
export TEZOS_RPC_URI=http://localhost:20000
export TEZOS_SECRET_KEY=edsk3QoqBuvdamxouPhin7swCvkQNgq4jP5KZPbwWNnwdZpSpJiEbq  
export TEZOS_PUBLIC_KEY_HASH=tz1VSUr8wwNhLAzempoch5d6hLRiTh8Cjcjb
export WAREHOUSE_CONTRACT_ADDRESS=KT1WAdgoGm6A7V6cuhodV9QLqUHJSqUkEkEE
export LOGGING_FORMAT=cli
export PGSQL_HOST=localhost
export PGSQL_USER=jwa
export PGSQL_PASSWORD=jwalab
export PGSQL_DATABASE=item

set -euo pipefail

declare -a tags=(
    $(git rev-parse --verify HEAD --short)
    $(node -p -e "require('./package.json').version")
)

declare name=$(node -p -e "require('./package.json').name")

function start() {
    node dist/index.js
}

function dev() {
    npm run dev
}

function build() {
    npm run build
}

function docker-build() {
    docker build . -t jwalab/$name
}

function docker-tag() {
    for tag in ${tags[@]}
    do
        docker tag jwalab/$name jwalab/$name:$tag
    done
}

function docker-push() {
    docker push jwalab/$name
    for tag in ${tags[@]}
    do
        docker push jwalab/$name:$tag
    done
}

function knex() {
    npx knex "${@:1}"
}

function deploy-warehouse() {
    node tezos/deploy.js
}

"$@"
